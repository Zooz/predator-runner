{
    "name": "system-tests",
    "description": "performance-framework-runner system tests",
    "type": "custom",
    "artillery_test": {
        "config": {
            "target": "http://localhost:3003",
                "http": {
                    "pool": 100
                },
            "phases": [{
                "duration": 30,
                "arrivalRate": 100
            }]
        },
        "before": {
            "flow": [
                {"post":
                        {
                            "url": "/pets",
                            "json": {"name": "MickeyTheDog", "species": "Dog"},
                            "capture": {
                                "json": "$.id",
                                "as": "petId"
                            }
                        }
                }
            ]
        },
        "scenarios": [{
            "name": "Get pet",
            "flow": [{
                "get": {
                    "url": "/pets/{{ petId }}",
                    "headers": {
                        "Content-Type": "application/json"
                    }
                }
            }]
        }]
    }
}